<!doctype html>
<html lang="en">

<head>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <title>BlogPerguntas</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
     <nav class="navbar navbar-dark bg-primary p-3 ">
          <a href="/" class="navbar-brand">GuiaPress</a>

          <ul class="navbar-nav ">
               <li class="nav-item"><a href="/admin/categories" class="nav-link">Categorias</a></li>
          </ul>
     </nav>
     <div class="container">
          <br>
          <div class="card">
               <div class="card-header">
                    <h2>Cadastro de Categoria</h2>
               </div>

               <div class="card-body">
                    <form action="/articles/save" method="POST">
                         <input class="form-control" type="text" name="title" id="title" placeholder="Defina o titulo do Artigo">
                         <br>
                         <textarea class="form-control" name="body" id="article" placeholder="Escreva o artigo aqui"></textarea>
                         <br>
                         <label for="category">Categoria</label>
                         <select name="category" class="form-control">
                              <% categories.forEach((category)=> { %>
                                   <option value="<%= category.id %>">
                                        <%= category.title %>
                                   </option>
                                   <% }) %>
                         </select>
                         <br>
                         <button type="submit" class="btn btn-success mt-2">Cadastrar</button>
                    </form>
               </div>
          </div>

     </div>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
     <script src="/tinymce/tinymce.min.js"></script>
     <script>
          tinymce.init({
               selector: '#article',
               pluguins: ['advlist autolink lists image print preview hr anchor pagebreak searchreplace wordcount fullscreen insertdatetime media save table paste emoticons',]
          });
     </script>
</body>

</html>